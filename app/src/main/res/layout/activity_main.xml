<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/TitleText">
    <TextView
            android:text="@string/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:rotationX="-0"
            android:rotationY="-0" android:rotation="0" android:textAlignment="center" android:textSize="34sp"/>
    <Button
            android:text="@string/create_character_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/CreateCharacterMenuButton"
    />
    <Button
            android:text="@string/list_characters_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ListCharactersMenuButton"/>
</LinearLayout>